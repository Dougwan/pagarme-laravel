{
    "name": "keepcloud/pagarme-laravel",
    "version": "1.0.0",
    "description": "A Laravel package to integrate with Pagar.me API",
    "keywords": [
        "caiobarilli",
        "laravel",
        "pagarme"
    ],
    "homepage": "https://github.com/keepcloud/",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Melo",
            "email": "danielsmelo1994@gmail.com"
        },
        {
            "name": "Caio Barilli",
            "email": "caiobarilli@gmail.com",
            "homepage": "https://github.com/caiobarilli"
        },
        {
            "name": "Edison Costa",
            "email": "edison@keepcloud.io",
            "homepage": "https://keepcloud.io/"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.7",
        "illuminate/contracts": "^11.0",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Keepcloud\\Pagarme\\": "src/",
            "Keepcloud\\Pagarme\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keepcloud\\Pagarme\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Keepcloud\\Pagarme\\PagarmeServiceProvider"
            ],
            "aliases": {
                "Pagarme": "Keepcloud\\Pagarme\\Facades\\Pagarme"
            }
        }
    },
    "minimum-stability": "dev"
}
